doctype html
html
  head
    title emhrts - Unnamed Real Time Strategy Game
    meta(charset='utf-8')
    // Latest bootstrap compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='css/styles.css')
    script(type='text/javascript')
      include ./js/GoogleAnalytics.js
    script(type='text/javascript', src='jscache/stats.js')
    script(type='text/javascript', src='jscache/simplex-noise.js')
    script(type='text/javascript', src='jscache/dat.gui.min.js')
    script(type='text/javascript', src='jscache/three.js')
    script(type='text/javascript', src='jscache/DDSLoader.js')
    script(type='text/javascript', src='jscache/viewer.js')
    // <script type="text/javascript" src="jscache/OrbitControls.js"></script>
    // <script type="text/javascript" src="js/MapControls.js"></script>
    script(type='text/javascript', src='bundle.js')
    // script(type='application/javascript;version=1.8', src='bundle2.js')
  body
    #menu
      #Menu.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4.modal-title Menu
            .modal-body
              ul
                li 1
                li 2
                li 3
                li 4
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
      #Help.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4.modal-title Help
            .modal-body
              h1 Keyboard controls
              ul
                li 1
                li 2
                li 3
                li 4
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
    #viewport
      ul#topmenu
        li
          a#menuHelp(href="javascript:void(0)") Help(F9)
        li
          a#menuMenu(href="javascript:void(0)") Menu(F10)
    .controls
      .minimap
      .unitinfo
        h3 Unit Info
        .debug
        .content
      .actions
        h3 Actions
        button.btn.btn-default.btn-lg.disabled(type='button')
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
          |  Move
        button.btn.btn-default.btn-lg.disabled(type='button')
          span.glyphicon.glyphicon-flash(aria-hidden='true')
          |  Attack
    // Canvas for js/ModelLoader.js
    canvas#viewer
    #m3progress.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4.modal-title Loading Units
          .modal-body
            #m3unit.progress.invisible
              .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100')
                span.sr-only 0% Complete
            #units.progress
              .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100')
                span.sr-only 0% Complete
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close

    script#modelSizes(type='application/json')
      include ./json/modelSizes.json

    script#sky-vertex(type='application/x-glsl')
      include ./shaders/sky-vertex.glsl
    script#sky-fragment(type='application/x-glsl')
      include ./shaders/sky-fragment.glsl
    script#loader-vertex(type='application/x-glsl')
      include ./shaders/loader-vertex.glsl
    script#loader-fragment(type='application/x-glsl')
      include ./shaders/loader-fragment.glsl
    script#health-vertex(type='application/x-glsl')
      include ./shaders/health-vertex.glsl
    script#health-fragment(type='application/x-glsl')
      include ./shaders/health-fragment.glsl
    script#water-vertex(type='application/x-glsl')
      include ./shaders/water-vertex.glsl
    script#water-fragment(type='application/x-glsl')
      include ./shaders/water-fragment.glsl
    script#explosion-vertex(type='application/x-glsl')
      include ./shaders/explosion-vertex.glsl
    script#explosion-fragment(type='application/x-glsl')
      include ./shaders/explosion-fragment.glsl
    script#teambar-vertex(type='application/x-glsl')
      include ./shaders/teambar-vertex.glsl
    script#teambar-fragment(type='application/x-glsl')
      include ./shaders/teambar-fragment.glsl
    script#m3-vertex(type='application/x-glsl')
      include ./shaders/m3-vertex.glsl
    script#m3-fragment(type='application/x-glsl')
      include ./shaders/m3-fragment.glsl
    script#generic-vertex(type='application/x-glsl')
      include ./shaders/generic-vertex.glsl
    script#generic-fragment(type='application/x-glsl')
      include ./shaders/generic-fragment.glsl
